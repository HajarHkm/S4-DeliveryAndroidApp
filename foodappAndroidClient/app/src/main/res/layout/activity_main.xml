<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hajar.foodapp.MainActivity"
    android:background="@drawable/tablebg">


    <Button
        android:id="@+id/order"
        android:layout_width="200dp"
        android:layout_height="60dp"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/buttonselectorstyle"
        android:gravity="center"
        android:text="Order"
        android:textColor="#fff" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/order"
        android:layout_alignStart="@+id/order"
        android:layout_below="@+id/order"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonselectorstyle"
        android:gravity="center"
        android:text="SignIn"
        android:textColor="#fff" />
    <Button
        android:id="@+id/register"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/order"
        android:layout_alignStart="@+id/order"
        android:layout_below="@+id/signIn"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonselectorstyle"
        android:gravity="center"
        android:text="Register"
        android:textColor="#fff" />





</RelativeLayout>
